{
	"[json][jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[yaml]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"conventionalCommits.scopes": [
		"deps-dev",
		"deps",
		"raindrop",
		"vscode",
		"chrome",
		"view",
		"workspace"
	],
	"cSpell.words": ["cobertura", "CODECOV", "jsonschema", "testid"],
	"eslint.enable": true,
	"eslint.format.enable": true,
	"files.associations": {
		"**/*.css": "tailwindcss"
	},
	"playwright.updateSnapshots": "changed",
	"prettier.enable": true,
	"svelte.enable-ts-plugin": true
}
